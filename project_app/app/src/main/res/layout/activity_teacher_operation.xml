<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher_operation">

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        app:srcCompat="@drawable/teacher_operation" />

    <TextView
        android:id="@+id/textView_show_teacher_name"
        android:layout_width="249dp"
        android:layout_height="35dp"
        android:layout_marginTop="20dp"
        android:textAlignment="center"
        android:textColor="#4196E3"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.621"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.027" />

    <Button
        android:id="@+id/button_take_photo_auto"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="124dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="拍照點名"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_take_photo"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="手動點名"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_take_photo_auto" />

    <Button
        android:id="@+id/button_check_absence_record"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="查看出缺席紀錄"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_take_photo" />

    <Button
        android:id="@+id/button_add_student_photo"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="新增學生照片"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_check_absence_record" />

    <Button
        android:id="@+id/button_remove_student_photo"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="刪除學生照片"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="@+id/imageView4"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="@+id/imageView4"
        app:layout_constraintTop_toBottomOf="@+id/button_add_student_photo" />

    <Button
        android:id="@+id/button_modify_and_add_seating"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="12dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="新增和修改座位表"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_remove_student_photo" />

    <Button
        android:id="@+id/button_mask_mode"
        android:layout_width="90dp"
        android:layout_height="114dp"
        android:background="@drawable/grayreturn_back"
        android:onClick="onclick"
        app:layout_constraintBottom_toBottomOf="@+id/imageView4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_modify_and_add_seating"
        app:layout_constraintVertical_bias="0.617" />
</android.support.constraint.ConstraintLayout>