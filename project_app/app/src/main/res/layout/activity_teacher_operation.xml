<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".teacher_operation">

    <TextView
        android:id="@+id/background_all"
        android:layout_width="417dp"
        android:layout_height="734dp"
        android:background="#C4C4C4C4"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.166"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView_show_teacher_name"
        android:layout_width="420dp"
        android:layout_height="94dp"
        android:background="#FFFFFF"
        android:text="歡迎老師"
        android:textAlignment="center"
        android:textColor="#4196E3"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/button_take_photo_auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.555"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button_take_photo_auto"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="180dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="點名"
        android:textColor="#4196E3"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/button_check_absence_record"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="查看出缺席紀錄"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_take_photo_auto" />

    <Button
        android:id="@+id/button_add_student_photo"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="新增學生照片"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_check_absence_record" />

    <Button
        android:id="@+id/button_remove_student_photo"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="刪除學生照片"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="@+id/background_all"
        app:layout_constraintStart_toStartOf="@+id/background_all"
        app:layout_constraintTop_toBottomOf="@+id/button_add_student_photo" />

    <Button
        android:id="@+id/button_modify_and_add_seating"
        android:layout_width="249dp"
        android:layout_height="44dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="新增和修改座位表"
        android:textColor="#4196E3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_remove_student_photo" />

    <Button
        android:id="@+id/button_mask_mode"
        android:layout_width="90dp"
        android:layout_height="114dp"
        android:layout_marginTop="70dp"
        android:background="@drawable/home_gray"
        android:onClick="onclick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_modify_and_add_seating"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="34dp"
        android:layout_height="54dp"
        android:background="@drawable/myphone"
        app:layout_constraintBottom_toBottomOf="@+id/textView_show_teacher_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.127"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/background_all"
        app:layout_constraintVertical_bias="0.428" />

</android.support.constraint.ConstraintLayout>