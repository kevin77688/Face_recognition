<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".student_opertion">

    <Button
        android:id="@+id/return_button"
        android:layout_width="90dp"
        android:layout_height="114dp"
        android:background="@drawable/home_gray"
        android:onClick="onclick"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/check_presentation_record_button"
        app:layout_constraintVertical_bias="0.527" />

    <TextView
        android:id="@+id/upview_text"
        android:layout_width="409dp"
        android:layout_height="106dp"
        android:text="歡迎同學"
        android:textAlignment="center"
        android:textColor="#4196E3"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/downview_text"
        android:layout_width="412dp"
        android:layout_height="646dp"
        android:background="?attr/colorButtonNormal"
        android:textColor="@android:color/darker_gray"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upview_text"
        app:layout_constraintVertical_bias="0.0" />

    <ImageView
        android:id="@+id/myphone_img"
        android:layout_width="36dp"
        android:layout_height="57dp"
        app:layout_constraintBottom_toBottomOf="@+id/upview_text"
        app:layout_constraintEnd_toEndOf="@+id/upview_text"
        app:layout_constraintHorizontal_bias="0.109"
        app:layout_constraintStart_toStartOf="@+id/upview_text"
        app:layout_constraintTop_toTopOf="@+id/upview_text"
        app:layout_constraintVertical_bias="0.51"
        app:srcCompat="@drawable/myphone" />

    <Button
        android:id="@+id/dcchect_photo_button"
        android:layout_width="236dp"
        android:layout_height="53dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="查看照片"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upview_text" />

    <Button
        android:id="@+id/upload_button"
        android:layout_width="236dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="上傳照片"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/dcchect_photo_button" />

    <Button
        android:id="@+id/check_presentation_record_button"
        android:layout_width="236dp"
        android:layout_height="53dp"
        android:layout_marginTop="36dp"
        android:layout_marginBottom="356dp"
        android:background="@drawable/button_white"
        android:onClick="onclick"
        android:text="查看出缺席紀錄"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="@+id/downview_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.514"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/upload_button"
        app:layout_constraintVertical_bias="0.0" />

</android.support.constraint.ConstraintLayout>